{% extends "admin/base.twig" %}

{% block head %}
    {{ parent() }}
    <link href="{{ constant('TPL_URL') }}/assets/global/plugins/jquery-minicolors/jquery.minicolors.css" rel="stylesheet" type="text/css" />
    <script src="{{ constant('TPL_URL') }}/assets/global/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js" type="text/javascript"></script>
    <script src="{{ constant('TPL_URL') }}/assets/global/plugins/jquery-minicolors/jquery.minicolors.min.js" type="text/javascript"></script>
    
    <script type="text/javascript">
        $(document).ready(function() {
            $('.color-picker').minicolors({
                theme: 'bootstrap',
            });
        });
    </script>
    
    <style>
        .minicolors-input {
{#            width: 100px;#}
        }
        .minicolors-grid-inner {
            z-index: 100;
        }
    </style>

{% endblock %}

{% block content %}
<h3 class="page-title">{{ pageTitle }}
</h3>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-social-dribbble font-green"></i>
            <span class="caption-subject font-green bold uppercase">Simple Table</span>
        </div>
    </div>
    <div class="portlet-body form">    
        <form method="post" class="form-horizontal" action="{{ server('PHP_SELF') }}">
            <div class="form-body">
                <div>
                <table id="example" class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer">
                <thead>
                    <tr>
                        <th>{{ lang.lp }}</th>
                        <th>{{ lang.id }}</th>
                        <th>{{ lang.name }}</th>
                        <th>{{ lang.value }}</th>
                        <th>{{ lang.desc }}</th>                     
                    </tr>
                </thead>
                <tbody>            
                {% for entity in entity.colors if entity.isDefault == 0 %}                        
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</td>
                        <td><input class="form-control color-picker" type="text" name="colors[{{ entity.name }}]" value="{{ entity.value }}" /></td>
                        <td>{{ entity.description }}</td>
                    </tr>                                       
                {% endfor %}
                </tbody>  
                </table>
                </div>        
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="hidden" name="action" value="save" />
                        <input type="hidden" name="template_id" value="{{ entity.id }}" />
                        
                        {% if user.level in ['1','2'] %}
                        <button class="btn green" type="submit">{{ lang.btn_save }}</button>
                        {% endif %}
                        
                        <a href="{{ server('PHP_SELF') }}?template_id={{ entity.id }}&action=restore" class="btn default">{{ lang.btn_restore_defaults_settings }}</a>
                        <a href="{{ server('PHP_SELF') }}" class="btn default">{{ lang.btn_cancel }}</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}