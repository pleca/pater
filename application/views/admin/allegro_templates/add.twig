{% block content %}
<h3 class="page-title">{{ pageTitle }}
</h3>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-equalizer font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase">Form Sample</span>
            <span class="caption-helper">form actions without bg color</span>
        </div>
    </div>
    <div class="portlet-body form">
        <form id="form" method="post" class="form-horizontal" action="{{ server('PHP_SELF') }}">
            <div class="form-body">                
                <div class="form-group">
                    <label class="col-md-3 control-label">{{ lang.name }}</label>
                    <div class="col-md-4">
                        <input class="form-control" type="text" name="name" value="{{ entity.name }}" />
                    </div>                     
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        {{ lang.content }}
                    </label>
                    <div class="col-md-7">
                        <textarea id="edytor" class="edytor form-control" rows="20" name="content">{{ entity.content|raw }}</textarea>
                    </div>
                </div>   
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-4">
                        Zmienne, które można użyć w szablonie:<br />
                        <b>#USER_ID#</b> - allegro user id<br />
                        <b>#PRODUCT_NAME#</b> - nazwa produktu<br />
                        <b>#PRODUCT_DESCRIPTION#</b> - opis produktu<br />
                        <b>#CATEGORIES#</b> - kategorie allegro<br />
                        <b>#PHOTO#</b> - zdjęcie produktu<br />
                    </div>
                </div>   
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="hidden" name="action" value="add" />
                        <button class="btn green" type="submit">{{ lang.btn_add }}</button>
                        <a href="?" class="btn default">{{ lang.btn_cancel }}</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}