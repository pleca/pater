{% extends "admin/base.twig" %}

{% block content %}
<h3 class="page-title">{{ pageTitle }}</h3>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-social-dribbble font-green"></i>
            <span class="caption-subject font-green bold uppercase">Simple Table</span>
        </div>
    </div>
    <div class="portlet-body form">
      
        <div class="table-scrollable">
        {% for entity in entities %}
            {% if loop.first %}
                <table id="example" class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer">
                <thead>
                    <tr>
                        <th>{{ lang.lp }}</th>
                        <th>{{ lang.name }}</th>
                        <th>{{ lang.code }}</th>
                        <th class="text-center">{{ lang.default }}</th>     
                        <th class="text-center">{{ lang.active }}</th>     
                        <th class="text-center">{{ lang.active_front }}</th>     
                        <th class="text-center">{{ lang.edit }}</th>                     
                    </tr>
                </thead>              
                <tbody>
            {% endif %}                       
                    <tr class="{% if parameter("id") == entity.id %}active{% endif %}">
                        <td>{{ loop.index }}</td>
                        <td>{{ attribute(lang,entity.code) }} - {{ entity.name }} </td>
                        <td>{{ entity.code }}</td>
                        <td class="text-center">
                           {% if entity.default == 1 %}<i class="fa fa-check" alt="{{ lang.yes }}" title="{{ lang.yes }}"></i>{% else %}<i class="fa fa-ban" alt="{{ lang.no }}" title="{{ lang.no }}"></i>{% endif %}
                        </td>                         
                        <td class="text-center">
                           {% if entity.active == 1 %}<i class="fa fa-check" alt="{{ lang.yes }}" title="{{ lang.yes }}"></i>{% else %}<i class="fa fa-ban" alt="{{ lang.no }}" title="{{ lang.no }}"></i>{% endif %}
                        </td>                        
                        <td class="text-center">
                           {% if entity.active_front == 1 %}<i class="fa fa-check" alt="{{ lang.yes }}" title="{{ lang.yes }}"></i>{% else %}<i class="fa fa-ban" alt="{{ lang.no }}" title="{{ lang.no }}"></i>{% endif %}
                        </td>                        
                        <td class="text-center">
                            <a href="?id={{ entity.id }}&amp;action=edit" title="{{ lang.edit }}">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
            {% if loop.last %}</tbody></table>{% endif %}
        {% endfor %}
        </div>
    </div>
</div>

{% include 'admin/other/confirm.twig' %}

{% endblock %}