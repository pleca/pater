{% extends "admin/base.twig" %}

{% block content %}
<h3 class="page-title">{{ pageTitle }}</h3>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-social-dribbble font-green"></i>
            <span class="caption-subject font-green bold uppercase">Simple Table</span>
        </div>
    </div>
    <div class="portlet-body form">

        {% for entity in entities %} 
            {% if loop.first %}
                <form id="form" class="form-horizontal" method="post" action="{{ server('PHP_SELF') }}">
                    <div class="form-body">
            {% endif %}                    
                        <div class="form-group">
                            <label class="col-md-3 control-label"><strong>{{ entity.name }}</strong><br /><small>{{ entity.desc }}</small></label>
                            <div class="col-md-4">
                                <input name="{{ entity.name }}" class="form-control" value="{{ entity.value }}">
                            </div>
                        </div>                                          
            {% if loop.last %}                
                    </div>  
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="hidden" name="action" value="save" />
                                <button class="btn green" type="submit">{{ lang.btn_save }}</button>
                            </div>
                        </div>
                    </div>                    
                </form>
            {% endif %}                    
        {% endfor %}            
    </div>
</div>

{% endblock %}