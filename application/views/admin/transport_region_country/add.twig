{% extends "admin/base.twig" %}

{% block content %}
<h3 class="page-title">{{ pageTitle }}</h3>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-equalizer font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase">Form Sample</span>
            <span class="caption-helper">form actions without bg color</span>
        </div>
    </div>
    <div class="portlet-body form">
        <form method="post" class="form-horizontal" action="{{ server('PHP_SELF') }}">
            <div class="form-body">  
                <div class="form-group">
                    <label class="col-md-3 control-label">{{ lang.transport_country }}</label>
                    <div class="col-md-4">
                        <select name="country_id" class="form-control">
                        <option value="">{{ lang.select }}</option>
                        {% for country in countries %} 
                            <option value="{{ country.id }}" {% if entity.country_id == country.id %}selected="selected"{% endif %}>{{ country.name }}</option>
                        {% endfor %}
                        </select>
                    </div>                     
                </div>                       
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn green" type="submit">{{ lang.btn_save }}</button>
                        <a href="{{ url_back }}" class="btn default">{{ lang.btn_cancel }}</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}