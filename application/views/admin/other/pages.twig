{% if pages > 1 %}
    <div class="clear"></div>
    <div class="pages text-center">
        {% for i in 1..pages %}
            {% if parameter("page") == i %}
               <a class="page-s" title="{{ i }}">{{ i }}</a>
            {% else %}
               <a class="page" href="?page={{ i }}{{ qs }}" title="{{ i }}">{{ i }}</a>
            {% endif %}       
        {% endfor %}
    </div>
{% endif %}