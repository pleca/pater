{% extends "admin/base.twig" %}

{% block content %}
<h3 class="page-title">{{ pageTitle }}
<small>Unikalne tłumaczenia nadpisujące standardowe tłumaczenia z pliku</small>
</h3>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-social-dribbble font-green"></i>
            <span class="caption-subject font-green bold uppercase">Simple Table</span>
        </div>
    </div>
    <div class="portlet-body form">
        <div class="form-body">
            <div>
            <table id="example" class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer">
            <thead>
                <tr>
                    <th>{{ lang.lp }}</th>
                    <th>{{ lang.id }}</th>
                    <th>{{ lang.name }}</th>
                    <th class="text-center">{{ lang.edit }}</th>
                </tr>
            </thead>
            <tbody>            
            {% for entity in entities %}                        
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.name }}</td>
                    <td class="text-center">
                        <a href="?name={{ entity.name }}&amp;action=edit" title="{{ lang.edit }}">
                            <i class="fa fa-edit"></i>
                        </a>                    
                    </td>
                </tr>                                       
            {% endfor %}
            </tbody>  
            </table>
            </div>        
        </div>        
    </div>
</div>

{% include 'admin/other/confirm.twig' %}

{% endblock %}