{% extends "templates/base.twig" %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block content %}
<div id="pageTitle">
   <h1>{{ lang.newsletter_unsubscribe }}</h1>
</div>

<div id="pageContent">
   {% if error %}<div class="error red center">{{ error }}</div>{% endif %}
   {% if info %}<div class="info green center">{{ info }}</div>{% endif %}

   <form id="addForm" method="post" action="{{ server("PHP_SELF") }}">
      <table class="tableEdit" cellpadding="0" cellspacing="0" border="0">
         <tr height="80">
            <td colspan="2">{{ lang.newsletter_unsubscribe2 }}</td>
         </tr>
         <tr>
            <td valign="top" width="200">{{ lang.newsletter_email }}</td>
            <td><input class="inpText w300" type="text" name="email" value="" /></td>
         </tr>
         <tr height="50">
            <td></td>
            <td>
               <input type="hidden" name="action" value="unsubscribe" />
               <input type="hidden" name="code" value="" />
               <a class="btn" href="javascript:document.forms['addForm'].submit();" title="{{ lang.newsletter_unsubscribe3 }}" onclick="setCode();">{{ lang.newsletter_unsubscribe3 }}<span class="btnR"></span></a>
            </td>
         </tr>
      </table>
   </form>
</div>
{% endblock %}