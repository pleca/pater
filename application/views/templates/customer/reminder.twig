{% extends "templates/base.twig" %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block head %}
    {{ parent() }}

    {% if redirect %}
        <script type="text/javascript">
           $(document).ready(function () {
              setTimeout("location.href='{{ URLS }}/{{ lang.module_customer }}/{{ lang.module_login }}.html'", 5000);
           });
        </script>
    {% endif %}    
{% endblock %}

{% block content %}

<div class="reminder box">
    <div class="title">
       <h2>{{ lang.c_reminder2 }}</h2>
       <p>{{ lang.c_rem2 }}</p>
    </div>

    <div id="pageContent">
        {% include 'templates/other/notify.twig' %} 

        <form id="form" class="reminder-form form-horizontal" method="post" action="{{ server('PHP_SELF') }}">
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ lang.c_email }}</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="email" value="" placeholder="{{ lang.c_email3 }}">
                </div>
            </div>
            <input type="hidden" name="action" value="reminder" />
            <input type="hidden" name="code" value="" />
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default" onclick="setCode();">{{ lang.c_send }}</button>
                </div>
            </div>
        </form>        
    </div>
</div>

{% endblock %}