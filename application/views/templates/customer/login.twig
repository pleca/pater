{% extends "templates/base.twig" %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block content %}
    <div class="row login-page">
        <div class="col-sm-6">
            <h1>{{ lang.c_log }}</h1>
            <p>{{ lang.c_log2 }}</p>

            {% include 'templates/other/notify.twig' %}

            <form class="form-horizontal" method="post" action="{{ server('PHP_SELF') }}">
                <div class="form-group">
                    <label class="col-sm-4 control-label">{{ lang.c_login2 }}</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="login" value="{{ aItem2.login }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">{{ lang.c_password }}</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" name="pass" value="{{ aItem2.pass2 }}">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <span class="help-block"><a href="{{ constant("URL") }}/{{ lang.module_customer }}/{{ lang.module_reminder }}.html">{{ lang.c_reminder }}?</a></span>
                        <button type="submit" class="btn btn-default">{{ lang.c_signin }}</button>
                    </div>
                </div>          
                <input type="hidden" name="action" value="login" />                    
            </form>

        </div>
        <div class="col-sm-6">

            <h1>{{ lang.menu_register }}</h1>
{#            <p>If you have a login account by entering your e-mail address and password.</p>#}

            <div class="text-xs-center">
                <i class="mdi mdi-account-location"></i>
                <a href="{{ constant("URL") }}/customer/register" class="btn btn-default">{{ lang.menu_register }}</a>
            </div>

        </div>

    </div>         
{% endblock %}               