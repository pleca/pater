      <a href="{{ entity.photo.normal }}" title="{{ entity.title }}" class="fancybox"><img class="articleImg" src="{{ entity.photo.small }}" alt="{{ entity.title }}" /></a>
   {% endif %}
   <div class="articleDate">{{ entity.date_add }}</div>
   <div class="articleTitle">{{ entity.desc.name }}</div>         
   <div class="articleDesc">{{ entity.desc.desc|raw }}</div>

